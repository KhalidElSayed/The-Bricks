.pvl.mtl
  %h1 One class fits multiple tags
  .button.mrs Div
  %span.button.mrs Span
  %a.button.mrs{href: "#"} Link
  %input.button.mrs{type: "submit", value: "Input"}
  %button.button Button

.pvl
  %h1 Size
  .button.mrs Default
  .button.is-small.mrs Small

.pvl
  %h1 Colors
  .button.mrs Default
  .button.is-firm.mrs Firm
  .button.is-positive.mrs Positive
  .button.is-negative.mrs Negative
  .button.is-inverse.mrs Inverse

.pvl
  %h1 Effects
  .button.mrs Default
  .button.is-minimal.mrs Minimal
  .button.is-stroke.mrs Stroke

.pvl
  %h1 Shapes
  .button.mrs Default
  .button.is-square.mrs Square
  .button.is-corner.mrs Corner

.pvl
  %h1 Text inputs
  .form--row.mbl.is-m-gap
    .col1of6
      .input--holder.mlm
        %input{type: "text", value: "Default"}
        %input.input--button.is-search{type: "submit", value: ""}
    .col1of6
      .input--holder.mlm
        %input{type: "text", value: "Default"}
        %input.input--button.is-firm.is-search{type: "submit", value: ""}
    .col1of6
      .input--holder.mlm
        %input.is-rounded{type: "text", value: "Rounded"}
        %input.input--button.is-rounded.is-search{type: "submit", value: ""}
    .col1of6
      .input--holder.mlm
        %input{type: "text", value: "Default"}
        %input.input--icon.is-date{type: "submit", value: ""}
    .col1of6
      .input--holder.mlm
        %input{type: "text", value: "Default"}
        %input.input--icon.is-error{type: "submit", value: ""}
    .col1of6
      .input--holder.mlm
        %input{type: "text", value: "Default"}
        %input.input--icon.is-success{type: "submit", value: ""}

  .form--row.is-l-gap
    .col1of3
      .mll
        %input.is-negative{type: "text", value: "Negative"}
    .col1of3
      .mll
        %input.is-positive{type: "text", value: "Positive"}
    .col1of3
      .mll
        %input.is-notice{type: "text", value: "Notice"}

.ptl.clearfix
  .col1of2
    .mrm
      %h1 Shapes
      .form--row.mbl
        %input{type: "text", value: "Default"}
      .form--row.mbl
        %input.is-square{type: "text", value: "Square"}
      .form--row.mbl
        %input.is-rounded{type: "text", value: "Rounded"}

  .col1of2
    .mlm
      %h1 Effects
      .form--row.mbl
        %input{type: "text", value: "Default"}
      .form--row.mbl
        %input.is-minimal{type: "text", value: "Minimal"}
      .form--row.mbl
        %input.is-inverse{type: "text", value: "Inverse"}

